{
  "manifest_version": 3,
  "name": "ExplBot",
  "version": "1.0",
  "description": "My first Chrome extension",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ]
} 